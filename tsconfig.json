{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "target": "es2020",
    "lib": [
      "es2020",
    ],
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
